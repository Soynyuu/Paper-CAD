{
    "name": "Paper-CAD",
    "scripts": {
        "dev": "NODE_ENV=development npx rspack dev",
        "build": "NODE_ENV=production npx rspack build",
        "build:wasm": "cd cpp && cmake --preset release && cmake --build --preset release",
        "demo:build": "NODE_ENV=demo npx rspack build",
        "demo": "npm run demo:build && npx serve dist --listen 8080",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "testc": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
        "format": "npx prettier --write . && npx clang-format --style=Webkit --sort-includes -i ./cpp/src/**",
        "release": "node scripts/release.mjs",
        "setup:wasm": "node scripts/setup_wasm_deps.mjs",
        "deploy": "npm run build && npx wrangler pages deploy dist --project-name=paper-cad",
        "deploy:staging": "npm run build && npx wrangler pages deploy dist --project-name=paper-cad --branch=staging",
        "deploy:production": "npm run build && npx wrangler pages deploy dist --project-name=paper-cad --branch=main",
        "preview": "npm run build && npx wrangler pages dev dist --port 3000"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    },
    "lint-staged": {
        "*.{ts,js,css,json,md}": [
            "prettier --write"
        ],
        "*.{c,h,cxx,hxx,cpp,hpp}": [
            "clang-format --style=Webkit --sort-includes -i"
        ]
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@rspack/cli": "^1.4.8",
        "@rspack/core": "1.3.5",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^14.3.1",
        "@types/jest": "29.5.14",
        "@types/react": "^18.3.27",
        "@types/react-dom": "^18.3.7",
        "clang-format": "^1.8.0",
        "fork-ts-checker-webpack-plugin": "9.1.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "lint-staged": "15.5.1",
        "prettier": "^3.5.3",
        "serve": "^14.2.5",
        "simple-git-hooks": "2.12.1",
        "ts-jest": "29.3.2",
        "typescript": "5.8.3",
        "typescript-plugin-css-modules": "^5.1.0"
    },
    "dependencies": {
        "jotai": "^2.16.1",
        "lottie-web": "^5.13.0",
        "panzoom": "^9.4.3",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "resium": "^1.19.2",
        "svgedit": "^7.3.8"
    }
}
